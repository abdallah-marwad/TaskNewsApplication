<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialogAnimationVertically">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
    <!--    title-->
    <style name="textTitleLarge_SemiBoldStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item> // weight : 600
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textTitleNormal_SemiBoldStyle">
        <item name="android:fontFamily">@font/poppins_semi_bold</item> // weight : 600
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textTitleNormalStyle">
        <item name="android:fontFamily">@font/poppins_medium</item> // weight : 500
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textTitleSmallStyle">
        <item name="android:fontFamily">@font/poppins_regular</item> // weight : 400
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="hintTxtStyle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_65_opacity</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="hintTxtStyleSmall">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_65_opacity</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--    title-->
    <style name="blueTxt">
        <item name="android:fontFamily">@font/poppins_medium</item>// weight : 500
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="blueButtonStyle">
        <item name="android:background">@drawable/blue_btn_bg</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
